KUBE_CP_COUNT=3
KUBE_WORKER_COUNT=5
KUBE_ETCD_COUNT=3
KUBE_PROVIDER=libvirt

# Lean HA defaults for local labs:
# - control planes smaller
# - workers slightly larger for workloads
KUBE_CP_CPUS=1
KUBE_CP_MEMORY=1536
KUBE_WORKER_CPUS=1
KUBE_WORKER_MEMORY=1536
KUBE_ETCD_CPUS=1
KUBE_ETCD_MEMORY=1024
KUBE_API_LB_ENABLED=true
KUBE_API_LB_IP=10.30.0.5
KUBE_API_LB_HOSTNAME=k3s-api.local

KUBE_NETWORK_PREFIX=10.30.0
KUBE_BOX=bento/ubuntu-24.04

K3S_VERSION=v1.30.6+k3s1
# WARNING: This default cluster token is intended for local lab/development use only.
# For any environment with security requirements, override this with a strong,
# randomly generated value and do not commit the real token to version control.
K3S_CLUSTER_TOKEN=k3s-vagrant-shared-token
